{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch current node file",
            "program": "${file}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}\\serve\"",
            "outFiles": []
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Port",
            "address": "localhost",
            "port": 3000,
            "outFiles": []
        },
        {
            "name": "Attach localhost",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceRoot}"
        }
    ]
}